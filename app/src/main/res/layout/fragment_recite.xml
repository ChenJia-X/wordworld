<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.man.word_world.Recite.ReciteActivity"
    android:background="@color/bg_white">

    <TextView android:id="@+id/text_set_glossary_insert_local_res"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:text="使用本地词库："
        android:textColor="#ff2c2c2c" android:textSize="16.0sp" />


    <LinearLayout android:id="@+id/line_set_glossary_insert_local_res_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_set_glossary_insert_local_res"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button android:id="@+id/button_set_insert_local_res_cet4"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@color/btn_press_color"
            android:text="CET-4"
            android:textColor="#ffffffff"
            android:textSize="17.0sp" />
        <Button android:id="@+id/button_set_insert_local_res_cet6"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@color/btn_press_color"
            android:text="CET-6"
            android:textColor="#ffffffff"
            android:textSize="17.0sp" />
        <Button android:id="@+id/button_set_insert_local_res_gre"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@color/btn_press_color"
            android:text="GRE"
            android:textColor="#ffffffff"
            android:textSize="17.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_set_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20.0dip"
        android:layout_below="@id/line_set_glossary_insert_local_res_list">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/divider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习时间:"
            android:textColor="#ff2c2c2c"
            android:textSize="16.0sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
           <EditText android:id="@+id/edit_time"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:text="2016.12.30"
               android:gravity="center"
               android:textColor="@color/bg_black"/>
           <Button android:id="@+id/btn_set_deadline"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/btn_press_color"
               android:text="设置完成时间"
               android:textColor="#ffffffff"
               android:textSize="17.0sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_below="@id/line_set_deadline">
        <ImageView android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/divider" />
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:orientation="horizontal">
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/text_general_today_should_grasp"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="今日掌握不可用，请去设置完成时间"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <Button android:id="@+id/btn_recite_start"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="3.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="3.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/title_start"
                        android:paddingLeft="-5.0dip"
                        android:text="GO"
                        android:textColor="#ffffffff"
                        android:textSize="15.0dip"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.4"
                        android:orientation="vertical">
                        <TextView android:id="@+id/text_dict_general_learn"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="已学习   27个"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"/>
                        <TextView android:id="@+id/text_dict_general_grasp"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="已掌握   20个"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"/>
                        <TextView android:id="@+id/text_dict_general_need_learn"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="未学习   1024个"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView android:id="@+id/text_general_course"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="GRE"
                            android:textColor="@color/text_color"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />
                        <com.example.man.word_world.Recite.RoundProgressBar
                            android:id="@+id/recite_progressbar"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="2.0dip"
                            android:layout_marginRight="2.0dip"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="3"
                            android_custom:roundColor="@color/circul_color"
                            android_custom:roundProgressColor="@color/text_color"
                            android_custom:textColor="@color/text_color"
                            android_custom:textSize="24.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<RelativeLayout android:id="@+id/rel_set_progress_back"
        android:background="#ff000000"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
